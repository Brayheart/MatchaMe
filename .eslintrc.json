{
  "parser": "babel-eslint",
  "extends": [
    "airbnb-base",
    "plugin:security/recommended",
    "eslint:recommended",
    "plugin:node/recommended"
    ],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
    },
  "plugins": [
    "node",
    "security",
    "import",
    "react", 
    "jsx-a11y"
    ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
    },
  "rules": {
    "import/prefer-default-export": 0,
    "node/no-unsupported-features": 0,
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "no-await-in-loop": "off"
    }
  }